<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.setting.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/text_Setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="0sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="五味調節"
            android:textSize="24dp"
            android:background="#fafafa"
           />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/chinjaorosu"
android:background="@drawable/border"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="チンジャオロース"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="24dp"
            android:background="#fafafa"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/textamami"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="甘味"
                android:background="@drawable/shape_rounded_corners"
                android:padding="8px"
                android:shadowRadius="6"
                android:textStyle="bold"
                />

            <SeekBar
                android:id="@+id/seekama"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center"

                android:max="10"
                android:progress="5"
                android:progressTint="@color/orange500"
                android:thumbTint="@color/orange500"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textenmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="塩味"
                android:background="@drawable/shape_rounded_corners"
                android:padding="8px"
                android:textStyle="bold"
                />

            <SeekBar
                android:id="@+id/seekenmi"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:max="10"
                android:progress="9"
                android:progressTint="@color/orange500"
                android:thumbTint="@color/orange500"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textsanmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="酸味"
                android:background="@drawable/shape_rounded_corners"
                android:padding="8px"
                android:textStyle="bold"
                />

            <SeekBar
                android:id="@+id/seeksanmi"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:max="10"
                android:progress="2"
                android:progressTint="@color/orange500"
                android:thumbTint="@color/orange500"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textnigami"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="苦み"
                android:background="@drawable/shape_rounded_corners"
                android:padding="8px"
                android:textStyle="bold"
                />

            <SeekBar
                android:id="@+id/seekniga"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:max="10"
                android:progress="6"
                android:progressTint="@color/orange500"
                android:thumbTint="@color/orange500"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textkarami"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="辛み"
                android:background="@drawable/shape_rounded_corners"
                android:padding="8px"
                android:textStyle="bold"
                />

            <SeekBar
                android:id="@+id/seekkarami"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:max="10"
                android:progress="2"
                android:progressTint="@color/orange500"
                android:thumbTint="@color/orange500"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonSetuzoku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
android:textSize="24dp"
            android:backgroundTint="#eecccc"
            android:fontFamily="sans-serif-black"
            android:text="接続" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.setting.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/text_Setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="五味調節"
            android:textSize="24dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/chinjaorosu"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="チンジャオロース"
            android:textAlignment="center"
            android:textSize="24dp"
            android:layout_marginBottom="25dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/textamami"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="甘味" />

            <SeekBar
                android:id="@+id/seekama"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:max="10"
                android:progress="5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textenmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="塩味" />

            <SeekBar
                android:id="@+id/seekenmi"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:max="10"
                android:progress="5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textsanmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="酸味" />

            <SeekBar
                android:id="@+id/seeksanmi"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:max="10"
                android:progress="5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textnigami"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="苦み" />

            <SeekBar
                android:id="@+id/seekniga"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:max="10"
                android:progress="5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textkarami"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="辛み" />

            <SeekBar
                android:id="@+id/seekkarami"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:max="10"
                android:progress="5" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSetuzoku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="接続" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.home.HomeFragment">


    <!--おすすめ-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ajisajilogo2big" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="おすすめ料理"
                    android:paddingTop="20dp"/>

            </LinearLayout>


            <!--旬-->
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button_yasai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/yasai_home"
                        android:onClick="onClickYasai"
                        android:text="野菜" />

                    <Button
                        android:id="@+id/button_niku"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/niku"
                        android:onClick="onClickOniku"
                        android:text="肉" />

                    <Button
                        android:id="@+id/button_men"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/yasai_home"
                        android:text="麺" />

                    <Button
                        android:id="@+id/button_hoka1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/yasai_home"
                        android:text="麺" />

                    <Button
                        android:id="@+id/button_hoka2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/yasai_home"
                        android:text="麺" />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="今が旬の料理"
                    android:paddingTop="20dp"/>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <Button
                        android:id="@+id/button_shun1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/yasai_home"
                        android:text="野菜" />

                    <Button
                        android:id="@+id/button_shun2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/yasai_home"
                        android:text="肉" />

                    <Button
                        android:id="@+id/button_shun3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/yasai_home"
                        android:text="麺" />

                    <Button
                        android:id="@+id/button_shun4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/yasai_home"
                        android:text="麺" />

                    <Button
                        android:id="@+id/button_shun5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/yasai_home"
                        android:text="麺" />

                </LinearLayout>
            </HorizontalScrollView>


            <!--コラム-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewcolumn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="スプーンコラム"
                    android:paddingTop="20dp"/>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button_column1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/yasai_home"
                        android:text="コラム1" />

                    <Button
                        android:id="@+id/button_column2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/yasai_home"
                        android:text="コラム2" />

                    <Button
                        android:id="@+id/button_column3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/yasai_home"
                        android:text="コラム3" />

                    <Button
                        android:id="@+id/button_column4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/yasai_home"
                        android:text="コラム4" />

                    <Button
                        android:id="@+id/button_column5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:drawableTop="@drawable/yasai_home"
                        android:text="コラム5" />

                </LinearLayout>
            </HorizontalScrollView>

            <!--なんのいみがあるかは分からないけどスクロールビューの関係で下にテキストを用意しないと見切れる-->
            <TextView
                android:id="@+id/x_x_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="48dp"/>
        </LinearLayout>    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>